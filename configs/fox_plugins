# Forensic Examiner plugins config (~/.fox_plugins)

# available variables:
#
#  $FILE    path of open file
#  $BASE    path of base file
#
[Autostart.Info]

# plugin name
Name = "target-info"

# filename pattern
Pattern = '.*\.(dd|img|raw|ad1|asdf|E0?|00?)'

# execute command
Commands = [
  'target-info "$FILE"',
]

# available variables:
#
#  $FOLDER  open file folder
#  $INPUT   user input value
#  $FILES   path of open files
#  $FILE    path of open file
#  $BASE    path of base file
#
# available hotkeys:
#
#  F2 - F6
#
[Plugin.F2]

# plugin name
Name = "target-query"

# user input prompt
Prompt = "Query"

# execute command
Commands = [
  'target-query -j -f "$INPUT" "$BASE"',
]
